<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GET Analytics</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            height: 100vh;
            background: linear-gradient(180deg, #1B6B93, #9BDEAC) no-repeat scroll;
        }
        .table-div {
          display: none;
        }
        
      table {
        border-collapse: collapse;
        width: 100%;
      }

      th,
      td {
        text-align: left;
        padding: 8px;
      }

      tr:nth-child(even) {
        background-color: #f2f2f2;
      }
      tr:nth-child(odd) {
        background-color: #111;
        color: white;
      }
      input[type="text"] {
        width: 50vh;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
      }
        button {
            background-color: #4caf50;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
        }
        button:hover {
            opacity: 0.8;
        }
        label {
            font-size: 20px;
        }
        h1 {
            text-align: center;
        }
    </style>
</head>
<body>
    <h1>Analytics</h1>
    <div class="table-div">
        <table>
            <tr>
                <th>Si. no</th>
                <th>Short URL</th>
                <th>Long URL</th>
                <th>Clicks</th>
            </tr>
            <% for (let i = 0; i < result.length; i++) { %>
                <tr>
                    <td><%= i + 1 %></td>
                    <td><%= shortId[i].shortUrl %></td>
                    <td><%= url[i].longUrl %></td>
                    <td><%= totalClicks[i].clicks %></td>
                    <td><%= created[i] %></td>                    
                </tr>
            <% } %>
        </table>
    </div>
    <div class="form-div">
        <form action="/analytics" method="GET">
            <label for="shortUrl">Enter the short URL</label>
            <br>
            <input type="text" name="shortUrl" id="shortUrl" placeholder="Enter the short URL">
            <br>
            <button type="submit">Submit</button>
        </form>
    </div>
    <script>
        const tableDiv = document.querySelector(".table-div");
        const formDiv = document.querySelector(".form-div");
        const urlParams = new URLSearchParams(window.location.search);
        const shortUrl = urlParams.get("shortUrl");
        if (shortUrl) {
            tableDiv.style.display = "block";
            formDiv.style.display = "none";
        }
    </script>
    
</body>
</html>